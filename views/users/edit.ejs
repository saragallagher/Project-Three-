<div class="col-sm-6 col-sm-offset-3">

    <h1>Edit Info</h1>


    <form method="post" action="/profile/<%=user.id %>?_method=PATCH">
        <div class="form-group">
          <div class="col-sm-6">
            <label>First Name</label>
            <input type="text" class="form-control" name="local.firstname" value="<%= user.local.firstname %> ">
          </div>
          <div class="col-sm-6">
            <label>Last Name</label>
            <input type="text" class="form-control" name="local.lastname" value="<%= user.local.lastname %>">
          </div>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="local.email" value="<%= user.local.email %>">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="local.password" value="<%= user.local.password %>">
        </div>

        <button type="submit" class="btn btn-warning btn-lg">Update</button>
    </form>

    <hr>


</div>

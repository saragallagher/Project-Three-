          <% } %>

        </div>
      </div>


        <div class="col-md-6">
          <div class="">
            <h2 class="">List</h2>
            <article class="users">
               <% lists.forEach((list) => { %>
                  <% if (list.user.id == user.id) { %>
                    <a href="/lists/<%=list._id%>"><div class="user-lists">
                      <h3> <%= list.title %> | <%= list.type %> | <%= list.location.title %></h3>
                    </div></a>
                  <% } %>
                <% }) %>
            </article>
          </div>
        </div>
</div>



<% if(user.local.isAdmin || user.facebook.isAdmin) { %>
  <div type="button" class="btn btn-success">
    <a href="/users">All users</a>
  </div>
<% } %>

<div type="button" class="btn btn-warning">
  <a href="/profile/<%=user._id%>/edit">Edit Profile</a>
</div>


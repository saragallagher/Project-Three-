          <% } %>

          <% if (user.facebook.email != null) { %>
            <h1><%= user.facebook.name %></h1>
            <h4 class="fa fa-facebook"> Facebook</h4><br>
            <img src="https://avatars.io/gravatar/<%= user.facebook.email %>/140" class="img-circle"><br>

<div id="mapdiv" style="width: 100%; height: 600px"></div>

<script>

  $.ajax({
    url: '/api/lists',
    method: 'get'
  })
    .done(function(lists) {
      var locations = lists.map(function(list){
      	return list.location
      })

      locations = _.uniq(locations, function(location, key, title) {
          return location.title;
      });

      var continentsDataProvider;

      var worldDataProvider = {
        "map": "worldLow",
        "getAreasFromMap": true,
        "images": locations,
      };

      var continentsDataProvider = {
        "map": "continentsLow",

        "areas": [ {
          "id": "africa",
          "linkToObject": worldDataProvider,
          "color": "#605675",
          "passZoomValuesToTarget": true
        }, {
          "id": "asia",
          "linkToObject": worldDataProvider,
          "color": "#a791b4",
          "passZoomValuesToTarget": true
        }, {
          "id": "australia",
          "linkToObject": worldDataProvider,
          "color": "#7f7891",
          "passZoomValuesToTarget": true
        }, {
          "id": "europe",
          "linkToObject": worldDataProvider,
          "color": "#9186a2",
          "passZoomValuesToTarget": true,
        }, {
          "id": "north_america",
          "linkToObject": worldDataProvider,
          "color": "#868191",
          "passZoomValuesToTarget": true
        }, {
          "id": "south_america",
          "linkToObject": worldDataProvider,
          "color": "#8f7ea9",
          "passZoomValuesToTarget": true
        } ]
      };

      var map = AmCharts.makeChart( "mapdiv", {
        "type": "map",
        "theme": "light",
        "projection": "miller",

        "areasSettings": {
          "autoZoom": true,
          "rollOverOutlineColor": "#9a7bca",
          "selectedColor": "#9a7bca",
          "color": "#a791b4",
          "rollOverColor": "#9a7bca",
          // marker areas settings
          "unlistedAreasColor": "#15A892"
        },

        "zoomControl": {
          "homeIconFile": "ammap/images/homeIcon.gif",
          "buttonFillColor": "#fff",
        },

        "imagesSettings": {
          "rollOverColor": "#9a7bca",
          "rollOverScale": 3,
          "selectedScale": 3,
          "selectedColor": "#089282",
          "color": "#13564e",
          "useTargetsZoomValues": true,
          "left": 30,
          "bottom": 30,
          "selectable": true,
          "labelFontSize": 15,
          "labelRollOverColor": "#9a7bca",
        },

        "dataProvider": continentsDataProvider,


        "listeners": {
          "event": "homeButtonClicked",
          "method": handleGoHome
        },

      });

    function handleGoHome() {
      map.dataProvider = continentsDataProvider;
      map.validateNow();
    }
  })
</script>
